<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".registration">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/bun_beauty" />

    <EditText
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:id="@+id/passRegistrationInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Pass"
        android:backgroundTint="@color/lightText"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="222dp" />

    <EditText
        android:layout_gravity="center"
        android:id="@+id/phoneRegistrationInput"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:ems="10"
        android:backgroundTint="@color/lightText"
        android:hint="@string/phone"
        android:inputType="phone"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="136dp" />

    <EditText
        android:layout_gravity="center"
        android:id="@+id/cityRegistrationInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:backgroundTint="@color/lightText"
        android:hint="@string/city"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="133dp"
        tools:layout_editor_absoluteY="355dp" />

    <Button
        android:id="@+id/registrateRegistrationBtn"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn"
        android:text="@string/regUser"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="427dp" />

    <Button
        android:id="@+id/readRegistrationBtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/readDB"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="468dp" />

    <Button
        android:id="@+id/deleteRegistrationBtn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/delUser"
        tools:layout_editor_absoluteX="305dp"
        tools:layout_editor_absoluteY="458dp" />

    <Button
        android:id="@+id/loginRegistrationBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authorization"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="64dp" />



</LinearLayout>